<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- AddToBasketServlet -->
    <servlet>
        <servlet-name>AddToBasketServlet</servlet-name>
        <servlet-class>com.footfancy.servlet.AddToBasketServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddToBasketServlet</servlet-name>
        <url-pattern>/addToBasket</url-pattern>
    </servlet-mapping>

	<servlet>
	    <servlet-name>DisplayBasketServlet</servlet-name>
	    <servlet-class>com.footfancy.servlet.DisplayBasketServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>DisplayBasketServlet</servlet-name>
	    <url-pattern>/displayBasket</url-pattern>
	</servlet-mapping>


    <servlet>
        <servlet-name>RemoveFromBasketServlet</servlet-name>
        <servlet-class>com.footfancy.servlet.RemoveFromBasketServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RemoveFromBasketServlet</servlet-name>
        <url-pattern>/removeFromBasket</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CheckoutServlet</servlet-name>
        <servlet-class>com.footfancy.servlet.CheckoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckoutServlet</servlet-name>
        <url-pattern>/checkout</url-pattern>
    </servlet-mapping>
	<servlet>
	    <servlet-name>getAllShoesServlet</servlet-name>
	    <servlet-class>com.footfancy.servlet.GetAllShoesServlet</servlet-class>
	    <load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
	    <servlet-name>getAllShoesServlet</servlet-name>
	    <url-pattern>/</url-pattern>
	</servlet-mapping>
	<servlet>
	    <servlet-name>payementServlet</servlet-name>
	    <servlet-class>com.footfancy.servlet.PayementServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>payementServlet</servlet-name>
	    <url-pattern>/payement</url-pattern>
	</servlet-mapping>	
	<servlet-mapping>
	    <servlet-name>default</servlet-name>
	    <url-pattern>*.jpg</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	    <servlet-name>default</servlet-name>
	    <url-pattern>*.jpeg</url-pattern>
	</servlet-mapping>
	
</web-app>
